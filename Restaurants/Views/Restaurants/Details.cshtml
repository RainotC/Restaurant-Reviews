@model Restaurants.Models.Restaurant

@{
    ViewData["Title"] = "Details";
}

<div>
    <a asp-action="AddReview" asp-route-id="@Model.Id" class="btn btn-primary">Add review</a>
    <a asp-action="Index">Back to List</a>
</div>

<h1>Details</h1>

<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MenuType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MenuType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.ZipCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.ZipCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
    </dl>
</div>

<h4>Reviews</h4>

@if (Model.Reviews != null && Model.Reviews.Any())  
{  
  <p>Average rating: @string.Format("{0:F2}", ViewData["AverageRating"])</p>  
  <table class="table">  
      <thead>  
          <tr>  
              <th>Rating</th>  
              <th>Comment</th>  
          </tr>  
      </thead>  
      <tbody>  
          @foreach (var review in Model.Reviews)  
          {  
              <tr>  
                  <td>@review.Rating</td>  
                  <td>@review.Comment</td>  
              </tr>  
          }  
      </tbody>  
  </table>  
}  
else  
{  
  <p>Restaurant has no reviews.</p>  
}
